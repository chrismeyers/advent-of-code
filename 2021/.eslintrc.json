{
  "root": true,
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "settings": {
    "node": {
      "tryExtensions": [".js", ".json", ".ts"]
    }
  }
}
