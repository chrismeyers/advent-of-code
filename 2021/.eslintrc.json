{
  "root": true,
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "import/extensions": ["error", { "mjs": "always" }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  },
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "settings": {
    "node": {
      "tryExtensions": [".mjs", ".js", ".json"]
    }
  },
  "overrides": [
    {
      "files": ["test/*.{mjs,js}"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
